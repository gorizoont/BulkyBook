@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-light">Edit Category</h2>
            <hr />

        </div>
        <div class="mb-3">
            <label asp-for="Name"><h4>Name</h4> </label>
            <input asp-for="Name"class="form-control bg-gradient" />
            <span asp-validation-for="Name" class="text-dark"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"><h4>Display Order</h4> </label>
            <input asp-for="DisplayOrder" class="form-control bg-gradient" />
            <span asp-validation-for="DisplayOrder" class="text-dark"></span>
        </div>
        <button type="submit" class="btn btn-dark" style="width:150px;">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px; color: black;">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

