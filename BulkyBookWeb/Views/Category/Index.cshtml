@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-square"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />
    <br />


    <table class="table table-bordered table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                ID
            </th>
            <th>
                Edit/Delete
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.DisplayOrder
                </td>
                <td width="20%">
                    @obj.Id
                </td>
                <td >
                    <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit"  asp-route-id="@obj.Id" class="btn btn-dark mx-0"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-0"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

    
    </table>
</div>